# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the payment list
GET     /                           controllers.Application.index()


# Authentication
GET     /login                              controllers.LoginApplication.login()
POST    /login                              controllers.LoginApplication.authenticate()
GET     /logout                             controllers.LoginApplication.logout()

# Payments list (look at the default values for pagination parameters)

POST    /payments/uploadFile       controllers.Application.uploadFile(paymentId:Long)
GET		/payments/artifacts/:id		controllers.Application.getPaymentArtifact(id:Long)
POST	/payments/artifacts/:id/delete		controllers.Application.deletePaymentArtifact(id:Long)

GET     /payments                  controllers.Application.list(p:Int ?= 0, s ?= "paidDate", o ?= "desc", f ?= "")

# Add payment
GET     /payments/new              controllers.Application.create()
POST    /payments                  controllers.Application.save()

# Edit existing payment
GET     /payments/:id              controllers.Application.edit(id:Long)
POST    /payments/:id              controllers.Application.update(id:Long)

# Delete a payment
POST    /payments/:id/delete       controllers.Application.delete(id:Long)


GET     /api/payments              controllers.Application.apiList()




# Payees list (look at the default values for pagination parameters)
GET     /payees                  controllers.PayeeApplication.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
# Add payment
GET     /payees/new              controllers.PayeeApplication.create()
POST    /payees                  controllers.PayeeApplication.save()
# Edit existing payee
GET     /payees/:id              controllers.PayeeApplication.edit(id:Long)
POST    /payees/:id              controllers.PayeeApplication.update(id:Long)
# Delete a payee
POST    /payees/:id/delete       controllers.PayeeApplication.delete(id:Long)

GET     /api/payees              controllers.PayeeApplication.apiList()


# Payers list (look at the default values for pagination parameters)
GET     /payers                  controllers.PayerApplication.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
# Add payment
GET     /payers/new              controllers.PayerApplication.create()
POST    /payers                  controllers.PayerApplication.save()
# Edit existing payer
GET     /payers/:id              controllers.PayerApplication.edit(id:Long)
POST    /payers/:id              controllers.PayerApplication.update(id:Long)
# Delete a payer
POST    /payers/:id/delete       controllers.PayerApplication.delete(id:Long)

GET     /api/payers              controllers.PayerApplication.apiList()

